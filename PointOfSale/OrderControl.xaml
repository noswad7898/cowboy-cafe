<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="50"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>

            <Button x:Name="ItemSelection" Click="ItemSelection_Click">Item Selection</Button>

        </StackPanel>

        <StackPanel Grid.Column="1">
            <Button x:Name="CancelOrder" Click="CancelOrder_Click">Cancel Order</Button>

        </StackPanel>
        <StackPanel Grid.Column="2">
            <Button x:Name="CompleteOrder" Click="CompleteOrder_Click">Complete Order</Button>

        </StackPanel>
    </Grid>
</UserControl>
    